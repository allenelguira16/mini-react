{
  "compilerOptions": {
    /* Output */
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",

    /* Module resolution */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "jsxImportSource": "@veltra/app",
    "allowImportingTsExtensions": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Optimization */
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    "paths": {
      "~/*": ["./src/*"],
      "@veltra/app": ["../../packages/veltra-app/src"],
      "@veltra/app/jsx-runtime": ["../../packages/veltra-app/src/jsx-runtime.ts"]
    }
  },
  "include": ["./src"],
  "exclude": ["./dist"]
}
