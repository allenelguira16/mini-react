{
  "compilerOptions": {
    /* Output */
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",

    /* Module resolution */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "jsxImportSource": "./src",
    "allowImportingTsExtensions": true,
    "composite": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Optimization */
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/jsx.d.ts", "src"],
  "exclude": ["dist"]
}
