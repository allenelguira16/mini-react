{
  "compilerOptions": {
    /* Output */
    "declaration": true,
    "emitDeclarationOnly": true,

    /* Module resolution */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "allowImportingTsExtensions": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Optimization */
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    "paths": {
      "@babel/preset-veltra": ["../../packages/babel-preset-veltra/src"]
    }
  },
  "include": ["src"],
  "exclude": ["dist"]
}
