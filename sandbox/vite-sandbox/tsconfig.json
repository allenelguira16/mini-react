{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "@veltra/app",

    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "paths": {
      "@veltra/app": ["../../packages/veltra-app/src"],
      "@veltra/router": ["../../packages/veltra-router/src"],
      "@veltra/app/jsx-runtime": ["../../packages/veltra-app/src/jsx-runtime.ts"],
      "vite-plugin-veltra": ["../../packages/vite-plugin-veltra/src"]
    }
  },
  "include": ["src", "./vite.config.ts"]
}
